<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Student Page</title>
</head>
<body>
    <div class="container">
        <h1 class="mb-4">Admin Page</h1>

        <a href="/crs/addstudentpage" class="btn btn-success ">Add Student</a>
        <a href="/crs/adminpage" class="btn btn-success ">View Courses</a>
        <a href="/crs/" class="btn btn-danger" style="float: right;">Log Out</a>

        <h3 class="mt-2">Current Students :</h3>

        <% students.forEach(student => {  %>
            <div class="card mt-4">
                <div class="card-body">
                  <h4 class="card-title"><%= student.name %></h4>
                  <div class="card-subtitle text-muted mb-2">
                      <span>Roll No: </span>
                      <%= student.rollNo %>
                  </div>
                  <form action="/crs/editstudentpage/<%= student.id %>" method="GET" class="d-inline">
                    <button type="submit" class="btn btn-info">Edit</button>
                  </form>

                  <form action="/crs/deletestudent/<%= student.id %>?_method=DELETE" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-danger">Delete</button>
                  </form>
                </div>
              </div>
            <% })  %>
    </div>
</body>